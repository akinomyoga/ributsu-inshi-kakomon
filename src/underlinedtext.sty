%%% 禁則文字の表
% 行末禁則文字
\def\ul@postkinsokucharacters{~,`,``,(,\{,[,$<$,%
   （,｛,［,「,〔,〈,《,『,【,＜,≪}
% 行頭禁則文字
\def\ul@prekinsokucharacters{~,{,},.,?,!,','',",),\},],$>$,%
   、,。,．,，,ー,！,？,）,｝,］,」,〕,〉,》,』,】,＞,≫}
